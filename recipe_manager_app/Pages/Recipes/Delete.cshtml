@page "{id:int}"
@model recipe_manager_app.Pages.Recipes.DeleteModel
@{
    ViewData["Title"] = "Delete Recipe";
}
<!-- Title: Delete Recipe Page -->
<!-- Author: Ahmed Ibrahim Ahmed -->
<!-- Date: 2025-02-02 -->
<!-- Description: Allows admins to delete recipes. -->

<h1 class="text-center mb-4">Delete Recipe</h1>

<h3>Are you sure you want to delete this recipe?</h3>
<div>
    <h4>@Model.Recipe.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Recipe.Description</dd>
        <dt class="col-sm-2">Ingredients</dt>
        <dd class="col-sm-10">@Model.Recipe.Ingredients</dd>
        <dt class="col-sm-2">Instructions</dt>
        <dd class="col-sm-10">@Model.Recipe.Instructions</dd>
        <dt class="col-sm-2">Cooking Time</dt>
        <dd class="col-sm-10">@Model.Recipe.CookingTime minutes</dd>
        <dt class="col-sm-2">Difficulty Level</dt>
        <dd class="col-sm-10">@Model.Recipe.DifficultyLevel</dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Recipe.Category</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Recipe.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>